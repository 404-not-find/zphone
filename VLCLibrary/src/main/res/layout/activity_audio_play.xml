<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <!-- android:background="@drawable/card_gridview_light"-->
    <RelativeLayout
        android:id="@+id/now_playing_controls_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <SeekBar
            android:id="@+id/nowPlayingSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:progress="0"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:indeterminate="false"
            android:thumb="@drawable/transparent_drawable"
            />
        <!--
       <ProgressBar
           android:id="@+id/startingStreamProgressBar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="?android:attr/progressBarStyleHorizontal"
           android:indeterminateOnly="true"
           android:paddingTop="8.5dp"
           android:paddingBottom="10dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:visibility="gone"
           android:thumb="@drawable/transparent_drawable"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@+id/nowPlayingSeekBar"
            android:paddingBottom="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shuffleButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/abs__list_selector_holo_light"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/shuffle"/>

            <TextView
                android:text="00:00"
                android:id="@+id/current_play_time"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:paddingLeft="24dp"
                android:background="@drawable/abs__list_selector_holo_light"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:alpha="0.9"
                android:background="@drawable/abs__list_selector_holo_light"
                android:src="@drawable/btn_playback_previous"/>

            <RelativeLayout
                android:id="@+id/playPauseButtonBackground"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/shadowed_circle_blue"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/playPauseButton"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_light"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:visibility="visible"
                    android:adjustViewBounds="true"/>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:alpha="0.9"
                android:background="@drawable/abs__list_selector_holo_light"
                android:src="@drawable/btn_playback_next"/>

            <TextView
                android:text="00:00"
                android:id="@+id/total_play_time"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:paddingRight="24dp"
                android:background="@drawable/abs__list_selector_holo_light"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/repeatButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/abs__list_selector_holo_light"
                android:scaleType="centerInside"
                android:src="@drawable/repeat"/>
        </LinearLayout>
    </RelativeLayout>

    <com.fourmob.panningview.library.PanningView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_above="@+id/now_playing_controls_header"
        android:id="@+id/panningView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:panningDurationInMs="5000"
        android:src="@drawable/bg_default_artist_art4"/>
</RelativeLayout>