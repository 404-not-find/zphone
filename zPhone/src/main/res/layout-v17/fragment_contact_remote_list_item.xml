<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="16dp"
    android:paddingTop="5dp">


    <ImageView
        android:id="@+id/screen_tab_contacts_item_imageView_avatar"
        style="@style/quickContactBadgeStyle"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginStart="16dp"
        android:padding="3dp"
        android:src="@drawable/ic_account_box_grey600">

    </ImageView>

    <TextView
        android:id="@+id/screen_tab_contacts_item_textView_displayname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/screen_tab_contacts_item_imageView_avatar"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:textDirection="locale"
        android:layout_marginStart="72dp"
        android:paddingLeft="@dimen/listview_item_padding"
        android:paddingRight="@dimen/listview_item_padding"
        android:singleLine="true"
        android:text="John Done"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>