<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_history_item_av_remote_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="3"
            android:text="John Done "
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/screen_tab_history_item_av_imageView_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/call_incoming_45" >
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/screen_tab_history_item_av_textView_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Vendredi 5 janvier 1997"
        android:textSize="16dp" >
    </TextView>

</LinearLayout>