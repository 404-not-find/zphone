<!-- Horizontal row of buttons (Voicemail + DialButton + Delete.) -->
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageButton
        android:id="@+id/dialTextDigitButton"
        android:layout_width="0px"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.30"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="description_text digit switch module"
        android:src="@drawable/ic_dialpad_grey600"
        android:state_enabled="true" />

    <View
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@color/grey_700" />

    <ImageButton
        android:id="@+id/dialVideoButton"
        android:layout_width="0px"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.30"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="description_dial_video_button"
        android:src="@drawable/ic_videocam_grey600"
        android:state_enabled="false" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@color/grey_700" />

    <ImageButton
        android:id="@+id/dialButton"
        android:layout_width="0px"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.30"
        android:tint="@color/light_blue"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="@null"
        android:src="@drawable/ic_call_grey600"
        android:state_enabled="false" />

    <View
        android:id="@+id/divider3"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@color/grey_700" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="0px"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.30"
        android:tint="@color/red_500"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="description_delete_button"
        android:src="@drawable/ic_backspace_grey600"
        android:state_enabled="false" />

</merge>