<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_list_item_text_only"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/List_item_background">

    <RelativeLayout
        style="@style/Text_only"
        android:layout_width="match_parent"
        android:id="@+id/id_item_me_rl">

        <TextView
            style="@style/Text_only_Text"
            android:id="@+id/id_item_name_tv"
            android:layout_width="match_parent"
            android:text="@string/setting"
            android:textColor="@color/grey_700" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_item_divider_lv"
        android:clickable="false"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:background="@color/white"
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/id_item_divider_tv"
            android:background="@color/grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
</LinearLayout>
