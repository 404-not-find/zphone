<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/Avatar_with_text"
        android:layout_width="match_parent"
        android:id="@+id/id_item_me_rl">

        <ImageView
            android:id="@+id/id_item_av_iv"
            style="@style/Avatar_with_text_Avatar"
            android:layout_width="wrap_content"
            android:tint="@color/light_blue"
            android:src="@drawable/ic_settings_white" />

        <TextView
            android:id="@+id/id_item_name_tv"
            style="@style/Avatar_with_text_Text"
            android:layout_width="match_parent"
            android:textDirection="locale"
            android:text="@string/setting"
            android:textColor="@color/grey_700" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_item_divider_lv"
        android:clickable="false"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:background="@color/white"
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/id_item_divider_tv"
            android:background="@color/grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
</FrameLayout>