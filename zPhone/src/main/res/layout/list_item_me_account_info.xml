<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/Three_line_list_Avatar_with_text_icon"
                android:layout_width="match_parent"
                android:background="@color/white">

    <LinearLayout
            android:id="@+id/register_ll"
            style="@style/Three_line_list_Avatar_with_text_icon_Avatar"
            android:layout_width="48dp"
            android:clickable="true"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/id_me_photo_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_new"/>
    </LinearLayout>

    <LinearLayout
            style="@style/Three_line_list_Avatar_with_text_icon_Text"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/three_list_avatar_with_text_primary_text_size"
                android:text="JohnDoe"/>

        <TextView
                android:id="@+id/account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/three_list_avatar_with_text_secondary_text_size"
                android:text="test"/>

        <TextView
                android:id="@+id/register_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/three_list_avatar_with_text_secondary_text_size"
                android:text="status"/>
    </LinearLayout>

    <com.kyleduo.switchbutton.SwitchButton
            style="@style/Three_line_list_Avatar_with_text_icon_Icon"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:id="@+id/register_status_bt"
            android:checked="false"/>
</RelativeLayout>