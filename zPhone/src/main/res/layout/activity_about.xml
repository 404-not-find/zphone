<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/grey_200">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/grey_200"
        tools:context="com.zycoo.android.zphone.ui.settings.AboutActivity">

        <LinearLayout
            android:id="@+id/zycoo_logo"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/zycoo_logo" />

            <TextView
                android:id="@+id/zphone_version"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="ZPhone 0.88"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <ListView
            android:background="@color/white"
            android:layout_below="@id/zycoo_logo"
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/zycoo_copyright"
        android:layout_width="match_parent"
        android:text="Copyright @ 2006-2015 \n ZYCOO ALL RIGHTS RESERVED"
        android:textSize="14sp"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="48dp"
        android:layout_height="match_parent" />
</FrameLayout>