<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/Three_line_list_Avatar_with_text_icon"
        android:layout_width="match_parent"
        android:id="@+id/id_item_me_rl">

        <ImageView
            android:id="@+id/id_item_av_iv"
            style="@style/Three_line_list_Avatar_with_text_icon_Avatar"
            android:layout_width="wrap_content"
            android:tint="@color/light_blue"
            android:src="@drawable/ic_settings_white" />

        <LinearLayout
            style="@style/Three_line_list_Avatar_with_text_icon_Text"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_item_name_tv"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/setting"
                android:textColor="@color/grey_700" />

            <TextView
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/id_item_second_name_tv"
                android:layout_width="match_parent"
                android:text="@string/setting"
                android:textColor="@color/grey_700" />

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/id_item_three_name_tv"
                android:layout_width="match_parent"
                android:text="@string/setting"
                android:textColor="@color/grey_700" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_item_icon_iv"
            style="@style/Three_line_list_Avatar_with_text_icon_Icon"
            android:layout_width="wrap_content"
            android:tint="@color/light_blue"
            android:src="@drawable/ic_settings_white" />
    </RelativeLayout>

    <TextView
        android:clickable="false"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/id_item_divider_tv"
        android:background="@color/grey_300"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>