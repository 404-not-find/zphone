<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dial_contact_item_ll"
              android:layout_width="match_parent"
              android:layout_height="56dp"
    >

    <RelativeLayout
        android:id="@+id/dial_contact_item_rv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="?attr/actionBarItemBackground"
        >
        <!--
             Use scaleType=centerCrop to give a nice full cropped image in the assigned
             space
        -->
        <ImageView
            android:id="@+id/conference_item_iv"
            android:layout_width="?android:attr/listPreferredItemHeight"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="5dip"
            android:contentDescription="contacts_photo"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_contact_picture_holo_light"
            android:visibility="visible"/>

        <!--
             Use standard android.R class text1 id instead of app specific id. This is just useful for
             consistency. This view also sets layout_alignWithParentIfMissing=true which lets the view
             align with the parent view if the text2 view is not part of the view hierarchy (which is
             its initial state).
        -->
        <!-- android:layout_alignWithParentIfMissing="true" -->
        <LinearLayout
            android:layout_marginLeft="72dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/contact_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/conference_item_iv"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:layout_marginLeft="72dp"
                android:paddingRight="@dimen/listview_item_padding"
                android:singleLine="true"
                android:text="Name"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/contact_number_tv"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/contact_name_tv"
                android:layout_toRightOf="@id/conference_item_iv"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="72dp"
                android:paddingRight="@dimen/listview_item_padding"
                android:singleLine="true"
                android:text="Number"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>