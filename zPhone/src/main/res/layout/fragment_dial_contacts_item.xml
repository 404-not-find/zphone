<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dial_contact_item_rv"
    android:layout_height="72dp"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/conference_item_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitCenter"
        style="@style/item_iv_start"
        android:src="@drawable/ic_account_box_grey600"
        android:contentDescription="contacts_photo"
        />


    <TextView
        android:id="@+id/contact_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:layout_marginTop="16dp"
        style="@style/item_tv1"
        tools:text="Name"
        />

    <TextView
        android:id="@+id/contact_number_tv"
        android:layout_below="@id/contact_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Number"
        style="@style/item_tv2"
        />
</RelativeLayout>
